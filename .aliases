#Navigation
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'

#Applications
alias vi='vim'
alias vim='/usr/bin/vim'
alias cp='pycp'
alias mv='pymv'
alias ag='sift'
alias pt='sift'
alias google='/usr/local/bin/google -C'
alias doc='docker'
alias dock='docker'
alias dc='docker-compose'
alias dm='docker-machine'

alias cl='clear'
alias ps='ps aux|sift'
alias rl='source ~/.zshrc'

#Git Commands
alias status='git status'
alias st='git status'
alias checkout='git checkout'
alias commit='git commit'
alias pull='git pull'
alias push='git push'
alias merge='git merge'
alias add='git add -A'
alias pull-request='git pull-request'
alias git=hub
alias rebase='git rebase'
alias remote='git remote'
alias mergetool='git mergetool'
alias branch='git branch'
alias stash='git stash'
alias pr='~/bin/./pull-request.sh'
alias gpu='git push -u origin $(git rev-parse --abbrev-ref HEAD)'
alias gcob='gco -b'

# Trash (https://github.com/sindresorhus/trash)
alias remove='/bin/rm'
alias rm='trash'

# Better top: https://github.com/MrRio/vtop
alias top='vtop'
alias oldtop='/usr/bin/top'

# Ansiweather: https://github.com/fcambus/ansiweather
alias weather='ansiweather -u imperial'
